<div class="container">
  <div class="card">
    <div class="container">
      <h1>New Log For <%= @task.name %></h1>
      <%= form_for [@task, @log] do |f| %>
        <h4>How was it today?</h4>
        <%= f.text_area :notes %><br/>
        <%= f.submit "Log It", class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</div>
